{
  "name": "vscode-toaster",
  "displayName": "Toaster",
  "publisher": "jeffwilcox",
  "description": "Display information toasts in Visual Studio Code from temporary local files, useful for communicating from a custom devcontainer to GitHub Codespaces.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "icon": "images/toaster.png",
  "keywords": [
    "toaster",
    "toast",
    "background",
    "notification",
    "codespaces"
  ],
  "preview": true,
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "homepage": "https://github.com/jeffwilcox/vscode-toaster",
	"repository": {
		"type": "git",
		"url": "https://github.com/jeffwilcox/vsvscode-toaster.git"
	},
	"bugs": {
		"url": "https://github.com/jeffwilcox/vscode-toaster/issues"
	},
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "ts-loader": "^9.4.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  }
}
